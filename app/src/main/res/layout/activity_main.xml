<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btUnited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Manchester United"
        app:layout_constraintEnd_toEndOf="@+id/btMadrid"
        app:layout_constraintStart_toStartOf="@+id/btMadrid"
        app:layout_constraintTop_toBottomOf="@+id/btMadrid"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Manchester City"
        app:layout_constraintEnd_toEndOf="@+id/btUnited"
        app:layout_constraintStart_toStartOf="@+id/btUnited"
        app:layout_constraintTop_toBottomOf="@+id/btUnited"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btDortmund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Dortmund"
        app:layout_constraintEnd_toEndOf="@+id/btCity"
        app:layout_constraintStart_toStartOf="@+id/btCity"
        app:layout_constraintTop_toBottomOf="@+id/btCity"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btMadrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="150dp"
        android:text="Real Madrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>